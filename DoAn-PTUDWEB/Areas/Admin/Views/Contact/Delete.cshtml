@model DoAn_PTUDWEB.Models.TbContact
<main>
    <div class="head-title">
        <div class="left">
            <h1>Dashboard</h1>
            <ul class="breadcrumb">
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li><i class='bx bx-chevron-right'></i></li>
                <li>
                    <a class="active" href="#"> Delete Contact</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Xác nhận xóa contact</h2>
                    </div>
                    <div class="card-body overflow-auto" style="max-height: 400px;">
                        <form asp-action="Delete" method="post">
                            <fieldset>
                                <legend>Thông tin contact</legend>

                                <div class="form-group">
                                    <label asp-for="ContactId">Contact ID</label>
                                    <input type="text" class="form-control mb-3" asp-for="ContactId" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="FirstName">First Name</label>
                                    <input type="text" class="form-control mb-3" asp-for="FirstName" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="LastName">Last Name</label>
                                    <input type="text" class="form-control mb-3" asp-for="LastName" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Phone">Phone</label>
                                    <input type="text" class="form-control mb-3" asp-for="Phone" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="text" class="form-control mb-3" asp-for="Email" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="SubjectName">SubjectName</label>
                                    <input type="text" class="form-control mb-3" asp-for="SubjectName" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Message">Message</label>
                                    <input type="text" class="form-control mb-3" asp-for="Message" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="CreatedDate">CreatedDate</label>
                                    <input type="text" class="form-control mb-3" asp-for="CreatedDate" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="CreatedBy">CreatedBy</label>
                                    <input type="text" class="form-control mb-3" asp-for="CreatedBy" readonly />
                                </div>

                                <!-- Thêm các trường thông tin khác nếu cần -->
                            </fieldset>

                            <div class="form-group">
                                <a class="btn btn-warning" href="javascript:history.back()">
                                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Xóa contact
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</main>
