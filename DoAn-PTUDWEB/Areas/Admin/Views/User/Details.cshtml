@model DoAn_PTUDWEB.Models.TbUser

@{
    ViewData["Title"] = "Details";
}

<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Thông tin người dùng chi tiết</a>
            </li>
        </ul>
    </div>
</div>

<div class="container">
    <div class="card">
        <h5 class="card-header">Thông tin người dùng</h5>
        <div class="card-body" >
            <table class="details-table">
                <tr class="details-row">
                    <td>Tên Tài khoản:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.UserName)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Họ và tên:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.FullName)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Mật khẩu:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.PasswordHash)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Số điện thoại:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Phone)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Địa chỉ:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Address)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Email):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Email)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Trạng thái:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Status)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Ngày tạo:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Ngày sửa:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.ModifiedDate)</td>
                </tr>

               

                <tr class="details-row">
                    <td class="details-label">Vai trò:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Role.RoleName)</td>
                </tr>
            </table>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>

   
</div>
