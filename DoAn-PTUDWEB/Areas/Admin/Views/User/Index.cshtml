@model IEnumerable<DoAn_PTUDWEB.Models.TbUser>

@{
    ViewData["Title"] = "Index";
}

<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Người dùng</a>
            </li>
        </ul>
    </div>
</div>


<div class="table" id="users_table" style="overflow: auto; max-height: 500px;">
    <section class="table__header">

        <div class="input-groupp">
            <input type="search" placeholder="Tìm kiếm người dùng...">
            <img src="~/admin/assets/img/search.png" alt="">
        </div>

        <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-primary btn-sm" title="Thêm mới người dùng">
            <i class="fas fa-plus fa-lg"></i>Thêm mới
        </a>
    </section>
    <section class="table__body">
        <table class="table">
            <thead>
                <tr>
                    
                    <th>
                        Họ và tên <span class="icon-arrow">&UpArrow;</span>
                    </th>                  
                    <th>
                        Số điện thoại <span class="icon-arrow">&UpArrow;</span>
                    </th>
                    <th>
                        Địa chỉ <span class="icon-arrow">&UpArrow;</span>
                    </th>
                    <th>
                        Email <span class="icon-arrow">&UpArrow;</span>
                    </th>
                    <th>
                        Trạng thái <span class="icon-arrow">&UpArrow;</span>
                    </th>
                    
                    <th>
                        Vai trò <span class="icon-arrow">&UpArrow;</span>
                    </th>

                    <th>
                        Chức năng <span class="icon-arrow">&UpArrow;</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <p class="status @(item.Status.HasValue && item.Status.Value == true ? "delivered" : "cancelled")">
                                @(item.Status == true ? "Mở" : "Khóa")
                            </p>
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm" title="Xóa thông tin người dùng">
                                <i class="fas fa-trash fa-lg"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-primary btn-sm" title="Chỉnh sửa thông tin người dùng">
                                <i class="fas fa-pencil-alt fa-lg"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm" title="Xem thông tin người dùng">
                                <i class="fas fa-eye fa-lg"></i>
                            </a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
