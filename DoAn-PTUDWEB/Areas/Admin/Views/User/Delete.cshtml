@model DoAn_PTUDWEB.Models.TbUser

@{
    ViewData["Title"] = "Delete";
}

<div class="head-title">
    <div class="left">
        <h1>Dashboard</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Delete User</a>
            </li>
        </ul>
    </div>
</div>

<div class="container mt-5">
    <div class="card">
        <h5 class="card-header">Delete User</h5>
        <div class="card-body">
            
            <table class="details-table">
                <tr class="details-row">
                    <td class="details-label">User Name:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.UserName)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Full Name:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.FullName)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Password Hash:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.PasswordHash)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Phone:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Phone)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Address:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Address)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Email:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Email)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Status:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Status)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Created Date:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Modified Date:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.ModifiedDate)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Deleted:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Deleted)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Role:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Role.RoleId)</td>
                </tr>
            </table>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UserId" />
                <div class="mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
