
<div class="head-title">
	<div class="left">
		<ul class="breadcrumb">
			<li>
				<a href="#">Dashboard</a>
			</li>
			<li><i class='bx bx-chevron-right'></i></li>
			<li>
				<a class="active" href="#">Trang quản trị</a>
			</li>
		</ul>
	</div>
	<a href="#" class="btn-download">
		<i class='bx bxs-cloud-download'></i>
		<span class="text">Download PDF</span>
	</a>
</div>

<ul class="box-info">
	<li>
		<i class='bx bxs-calendar-check'></i>
		<span class="text">
			<h3>@ViewBag.quantityOrder</h3>
			<p>Đơn hàng mới</p>
		</span>
	</li>
	<li>
		<i class='bx bxs-group'></i>
		<span class="text">
			<h3>@ViewBag.quantityUser</h3>
			<p>Người dùng</p>
		</span>
	</li>
	<li>
		<i class='bx bxs-dollar-circle'></i>
		<span class="text">
			<h3>@(ViewBag.sale != null ? string.Format("{0:#,##0}", ViewBag.sale) : "0")đ</h3>
			<p>Doanh thu</p>
		</span>
	</li>



</ul>


<div class="table-data">
	<div class="order">
		<div class="head">
			<h3>Đơn hàng gần đây</h3>
			<i class='bx bx-search'></i>
			<i class='bx bx-filter'></i>
		</div>
		<table>
			<thead>
				<tr>
					<th>Người dùng</th>
					<th>Ngày đặt hàng</th>
					<th>Trạng thái</th>
				</tr>
			</thead>
			<tbody>
			<tbody>
					@foreach (var order in ViewBag.orderViewModels)
					{
					<tr>
						<td>
							<img src="~/admin/assets/img/people.png">
							<p>@order.CustomerName</p>
						</td>
						<td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
						<td>
								@if (order.Status == 3)
								{
								<span class="status completed">Hoàn thành</span>
								}
								else if (order.Status == 1)
								{
								<span class="status pending">Đã xác nhận</span>
								}
								else if (order.Status == 2)
								{
								<span class="status process"> Đang giao</span>
								}
								else if (order.Status == 4)
								{
								<span class="status bg-danger"> Đã hủy</span>
								}
						</td>
					</tr>
					}
			</tbody>

		</table>
	</div>
	<div class="todo">
		<div class="head">
			<h3>Danh sách thương hiệu</h3>
			<i class='bx bx-plus'></i>
			<i class='bx bx-filter'></i>
		</div>
		<ul class="todo-list">
			@foreach(var item in ViewBag.listBrand)
			{
			<li class="completed">
					<p>@item.Name</p>
				<i class='bx bx-dots-vertical-rounded'></i>
			</li>
				
			}
		</ul>
	</div>
</div>