@model DoAn_PTUDWEB.Models.TbTrademark

@{
    ViewData["Title"] = "Edit";
}

<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Chỉnh sửa thương hiệu</a>
            </li>
        </ul>
    </div>
</div>

<div class="container mt-5">
    <div class="card">
        <h5 class="card-header">Thông tin thương hiệu</h5>

        <div class="card-body">

            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TrademarkId" />

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="Name" class="form-label">Tên thương hiệu</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="Description" class="form-label">Mô tả</label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Logo</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-success" type="button" onclick="openDialog()">Chọn Logo</button>
                            </div>
                            <input type="text" class="form-control" asp-for="Logo" id="file_input" aria-describedby="button-addon2" />
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-area="Admin" asp-controller="Trademark" asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    var summerNote = new DoAn_PTUDWEB.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}
