@model DoAn_PTUDWEB.Models.TbProduct

@{
    ViewData["Title"] = "Details";
}

<div class="head-title">
    <div class="left">
        <h1>Dashboard</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Chi tiết sản phẩm</a>
            </li>
        </ul>
    </div>
</div>

<div class="container mt-5">
    <div class="card">
        <h5 class="card-header">Details</h5>
        <div class="card-body" style="max-height: 350px; overflow-y: auto;">

            <table class="details-table">
                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Thumbnail):</td>
                    <td class="details-value text-center">
                        <img src="@Html.DisplayFor(model => model.Thumbnail)" alt="Thumbnail" class="img-fluid rounded-0 d-block" style="width: 200px; height: 200px;">
                    </td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Name):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Name)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.CategoryProductId):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.CategoryProductId)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.IsBestSeller):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.IsBestSeller)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.IsHot):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.IsHot)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.IsNew):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.IsNew)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Price):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Price)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.PriceDiscount):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.PriceDiscount)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Quantity):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Quantity)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Trademark.TrademarkId):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Trademark.TrademarkId)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.Description):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Description)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.IsActive):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.IsActive)</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
