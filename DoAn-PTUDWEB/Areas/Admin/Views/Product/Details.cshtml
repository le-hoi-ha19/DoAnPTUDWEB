@model DoAn_PTUDWEB.Models.TbProduct

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin Chi tiết sản phẩm</h1>

<div>
    <dl class="row">
   
        <dd class="col-sm-12">
            <img src="@Html.DisplayFor(model => model.Thumbnail)" alt="" width="200" height="200"/>
        </dd>
        
        <dt class = "col-sm-2">
            Tên sản phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Loại mặt hàng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryProductId)
        </dd>
        <dt class = "col-sm-2">
            Bán chạy:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsBestSeller)
        </dd>
        <dt class = "col-sm-2">
           Hot:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsHot)
        </dd>
        <dt class = "col-sm-2">
           Mới về
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsNew)
        </dd>
        <dt class = "col-sm-2">
            Giá:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Giảm giá:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceDiscount)
        </dd>
        <dt class = "col-sm-2">
            Số lượng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Thương hiệu: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trademark.TrademarkId)
        </dd>
        <dt class = "col-sm-2">
            Mô tả:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a> |
    <a asp-area="Admin" asp-controller="Product" asp-action="Index">Quay lại</a>

</div>
