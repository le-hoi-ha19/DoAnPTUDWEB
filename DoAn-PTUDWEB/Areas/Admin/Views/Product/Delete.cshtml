@model DoAn_PTUDWEB.Models.TbProduct

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TbProduct</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Loại mặt hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryProduct.CategoryProductId)
        </dd>
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Bán chạy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsBestSeller)
        </dd>
        <dt class = "col-sm-2">
            Hot
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsHot)
        </dd>
        <dt class = "col-sm-2">
            Mới về
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsNew)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Giảm giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceDiscount)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Ảnh:
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Thumbnail)" alt="ảnh " />
        </dd>
        
        <dt class = "col-sm-2">
            Thương hiệu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trademark.TrademarkId)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-controller="Product" asp-action="Index">Quay lại</a>

    </form>
</div>
