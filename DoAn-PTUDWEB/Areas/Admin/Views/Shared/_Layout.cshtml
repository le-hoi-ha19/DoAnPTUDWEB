@using DoAn_PTUDWEB.Models.ViewModels
@using DoAn_PTUDWEB.Utilities;
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@using System.Security.Claims;
@inject IHttpContextAccessor HttpContextAccessor
@{
	var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!--Link fontawesome-->
	<script src="https://kit.fontawesome.com/ce34ff19a5.js" crossorigin="anonymous"></script>
	<!--Link bootstrap-->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

	<!-- My CSS -->
	<link rel="stylesheet" href="~/admin/assets/css/style.css">
	<link rel="stylesheet" href="~/admin/assets/css/layout.css">
	<link rel="stylesheet" href="~/admin/assets/css/coctact.css">
	<title>Admin</title>
	<!--thông báo bật lên-->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<!-- link axios--!>
	<script src="https://cdn.jsdelivr.net/npm/axios@1.6.8/dist/axios.min.js"></script>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">Admin</span>
		</a>
		<ul class="side-menu top">
			<li asp-area ="Admin" asp-nav-link asp-controller="Home" asp-action="Index">
				<a href="/Admin/Home/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-house"></i></span>
					<span class="text">Trang quản trị</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Product" asp-action="Index">
				<a href="/Admin/Product/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-mobile"></i></span>
					<span class="text">Sản phẩm</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Trademark" asp-action="Index">
				<a href="/Admin/Trademark/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-trademark"></i></span>
					<span class="text">Thương hiệu</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Order" asp-action="Index">
				<a href="/Admin/Order/Index">
					
					<span class="pl-2 pr-4"><i class="fa-solid fa-bag-shopping"></i></span>
					<span class="text">Đơn hàng</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="User" asp-action="Index">
				<a href="/Admin/User/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-user"></i></span>
					<span class="text">Người dùng</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Post" asp-action="Index">
				<a href="/Admin/Post/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-blog"></i></span>
					<span class="text">Bài viết</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Slide" asp-action="Index">
				<a href="/Admin/Slide/Index">
					<span class="pl-2 pr-4"><i class="fa-solid fa-image"></i></span>
					<span class="text">Banner</span>
				</a>
			</li>
			<li asp-area="Admin" asp-nav-link asp-controller="Contact" asp-action="Index">
				<a href="/Admin/Contact/Index">
					<span class="pl-2 pr-4"><i class="fa-regular fa-address-book"></i></span>
					<span class="text">Phản hồi</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog'></i>
					<span class="text">Cài đặt</span>
				</a>
			</li>
			<li>
				<a href="/Account/Logout" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Đăng xuất</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav class="d-flex justify-content-between align-items-center">

			<div>
				<i class='bx bx-menu'></i>
			</div>
			<div class="d-flex justify-content-around align-items-center">
				<div class="widget-header mr-3">
					<a href="/" class="widget-view d-flex flex-column justify-content-center align-items-center text-decoration-none">
						<div class="icon-area">
							<i class="fa-solid fa-house"></i>
						</div>
					</a>
				</div>
				<a href="#" class="profileUser text-decoration-none d-flex flex-column p-4">
					<img class="rounded-circle" src="~/admin/assets/img/people.png">
					<span class="title pr-1">@fullName</span>
				</a>

			</div>
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
		@RenderBody()
		</main>
		<!-- MAIN -->

	</section>
	<!-- CONTENT -->


	<!--link js bootstrap-->
