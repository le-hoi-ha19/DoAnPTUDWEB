@model DoAn_PTUDWEB.Models.TbPost

@{
    ViewData["Title"] = "Details";
}
<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">Chi tiết bài viết</a>
            </li>
        </ul>
    </div>
</div>

<div class="container">
    <div class="card">
        <h5 class="card-header">Thông tin chi tiết</h5>
        <div class="card-body" >
            

            <table class="details-table">
                <tr class="details-row">
                    <td class="details-label">Ảnh:</td>
                    <td class="details-value text-center">
                        <img src="~/@Model.Image" alt="Image" class="img-fluid rounded-0 d-block " style="width: 200px; height: 200px;">
                    </td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Tên bài viết:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Name)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Mô tả:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Description)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Chi tiết:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.Detail)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.SeoTitle):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.SeoTitle)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.SeoDescription):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.SeoDescription)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">@Html.DisplayNameFor(model => model.SeoKeywords):</td>
                    <td class="details-value">@Html.DisplayFor(model => model.SeoKeywords)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Ngày tạo:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>

               

                <tr class="details-row">
                    <td class="details-label">Ngày sửa:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.ModifiedDate)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Sửa bởi:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.ModifiedBy)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Trạng thái:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.IsActive)</td>
                </tr>

                <tr class="details-row">
                    <td class="details-label">Người tạo:</td>
                    <td class="details-value">@Html.DisplayFor(model => model.User.FullName)</td>
                </tr>
            </table>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.BlogId" class="btn btn-primary">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>

    
</div>