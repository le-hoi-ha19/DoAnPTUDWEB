@model DoAn_PTUDWEB.Models.TbPost

<main>
    <div class="head-title">
        <div class="left">
            <ul class="breadcrumb">
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li><i class='bx bx-chevron-right'></i></li>
                <li>
                    <a class="active" href="#">Xóa bài viết</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Xác nhận xóa bài viết</h4>
                    </div>
                    <div class="card-body " >
                        <form asp-action="Delete" method="post">
                            <fieldset>

                                <div class="form-group">
                                    <label asp-for="BlogId">ID Bài viết</label>
                                    <input type="text" class="form-control mb-3" asp-for="BlogId" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Name">Tên bài viết</label>
                                    <input type="text" class="form-control mb-3" asp-for="Name" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description">Mô tả</label>
                                    <input type="text" class="form-control mb-3" asp-for="Description" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Detail">Chi tiết</label>
                                    <textarea class="form-control mb-3" asp-for="Detail" readonly></textarea>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image">Ảnh</label>
                                    <input type="text" class="form-control mb-3" asp-for="Image" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="SeoTitle">Seo Title</label>
                                    <input type="text" class="form-control mb-3" asp-for="SeoTitle" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="SeoDescription">Seo Description</label>
                                    <input type="text" class="form-control mb-3" asp-for="SeoDescription" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="SeoKeywords">Seo Keywords</label>
                                    <input type="text" class="form-control mb-3" asp-for="SeoKeywords" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="CreatedDate">Ngày tạo</label>
                                    <input type="text" class="form-control mb-3" asp-for="CreatedDate" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="CreatedBy">Người tạo</label>
                                    <input type="text" class="form-control mb-3" asp-for="CreatedBy" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="ModifiedDate">Ngày chỉnh sửa</label>
                                    <input type="text" class="form-control mb-3" asp-for="ModifiedDate" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="ModifiedBy">Người chỉnh sửa</label>
                                    <input type="text" class="form-control mb-3" asp-for="ModifiedBy" readonly />
                                </div>

                                <div class="form-group">
                                    <label asp-for="IsActive">Hiển thị</label>
                                    <input type="text" class="form-control mb-3" asp-for="IsActive" readonly />
                                </div>
                            </fieldset>

                            <div class="form-group">
                                <a class="btn btn-warning" href="javascript:history.back()">
                                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Xóa bài viết
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
