@{
	ViewBag.Title = "Trang chủ";
}

<!-- ========================= Start Phần thị trường của tôi  ========================= -->
<section class="section-main padding-y">
	<main class="card">
		<div class="card-body">

			<div class="row">

				@await Component.InvokeAsync("Categories")



				<div class="col-md-9 col-xl-7 col-lg-7">

					@await Component.InvokeAsync("Slide")

				</div> <!-- col.// -->
				<div class="col-md d-none d-lg-block flex-grow-1">
					<aside class="special-home-right">
						<h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>

						<div class="card-banner border-bottom">
							<div class="py-3" style="width:80%">
								<h6 class="card-title"> Hàng mới về</h6>
								<a href="#" class="btn btn-secondary btn-sm"> Mua ngay </a>
							</div>
							<img class="my-1" src="~/images/items/icon-hangmoive.jpeg" height="80" class="img-bg">
						</div>

						<div class="card-banner border-bottom">
							<div class="py-3" style="width:80%">
								<h6 class="card-title">Hàng tồn kho </h6>
								<a href="#" class="btn btn-secondary btn-sm"> Mua ngay </a>
							</div>
							<img class="my-1" src="~/images/items/icon-hangtonkho.gif" height="80" class="img-bg">
						</div>

						<div class="card-banner border-bottom">
							<div class="py-3" style="width:80%">
								<h6 class="card-title">Giảm đến 50%++</h6>
								<a href="#" class="btn btn-secondary btn-sm"> Mua ngay </a>
							</div>
							<img class="my-1" src="~/images/items/icon-giamgia50.jpg" height="80" class="img-bg">
						</div>

					</aside>
				</div> <!-- col.// -->
			</div> <!-- row.// -->

		</div> <!-- card-body.// -->
	</main> <!-- card.// -->

</section>
<!-- ========================= End Phần thị trường của tôi ========================= -->
<!-- Start sản phẩm Bán chạy nhất-->
@await Component.InvokeAsync("BestSellerProduct")
<!-- End sản phẩm Bán chạy nhất-->
<!-- Start sản phẩm Mới nhất-->
@await Component.InvokeAsync("NewProduct")
<!-- End sản phẩm Mới nhất-->
<!-- Start sản phẩm Hot -->
@await Component.InvokeAsync("HotProduct")
<!-- End sản phẩm Hot-->
