@using DoAn_PTUDWEB.Models.ViewModels;
@model ProductListViewModel

@{
	ViewBag.Title = "Cửa hàng";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
	<div class="container">

		<div class="row">
			<aside class="col-md-2">

				<!--Start lọc theo loại đồ -->
				<div class="border-bottom mb-4 pb-4">
					<h5 class="font-weight-semi-bold mb-4">Loại sản phẩm</h5>
					<form id="price-filter-form">
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="all" checked id="price-all">
							<label class="custom-control-label" for="price-all">Tất cả</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="dienthoai" id="price-1">
							<label class="custom-control-label" for="price-1">Điện thoại</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="maytinh" id="price-2">
							<label class="custom-control-label" for="price-2">Máy tính</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="phukiendienthoai" id="price-3">
							<label class="custom-control-label" for="price-3">Phụ kiện điện thoại</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="phukienmaytinh" id="price-3">
							<label class="custom-control-label" for="price-3">Phụ kiện máy tính</label>
						</div>
					</form>
				</div>
				<!--End lọc theo loại đồ -->

				<!--Start lọc theo thương hiệu-->
				<div class="border-bottom mb-4 pb-4">
					<h5 class="font-weight-semi-bold mb-4">Thương hiệu</h5>
					<form id="price-filter-form">
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="all" checked id="price-all">
							<label class="custom-control-label" for="price-all">Tất cả</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="samsung" id="price-1">
							<label class="custom-control-label" for="price-1">Sam sung</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="apple" id="price-2">
							<label class="custom-control-label" for="price-2">Apple</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="sony" id="price-3">
							<label class="custom-control-label" for="price-3">Sony</label>
						</div>
						
					</form>
				</div>
				<!--End lọc theo thương hiệu-->

				<!--Start lọc theo giá-->
				<div class="border-bottom mb-4 pb-4">
					<h5 class="font-weight-semi-bold mb-4">Giá</h5>
					<form id="price-filter-form">
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="all" checked id="price-all">
							<label class="custom-control-label" for="price-all">Tất cả</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="0-1000000" id="price-1">
							<label class="custom-control-label" for="price-1">0 - 1000 000</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="1000000-2000000" id="price-2">
							<label class="custom-control-label" for="price-2">1000 000 - 2000 000</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="2000000-3000000" id="price-3">
							<label class="custom-control-label" for="price-3">2000 000-3000 000</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="3000000-4000000" id="price-4">
							<label class="custom-control-label" for="price-4">3000 000-4000 000</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
							<input type="checkbox" class="custom-control-input" val="4000000-5000000" id="price-5">
							<label class="custom-control-label" for="price-5">4000 000 - 5000 000</label>
						</div>
					</form>
				</div>
				<!--End lọc theo giá-->

				<!--Start lọc theo màu-->
				<div class="border-bottom mb-4 pb-4">
					<h5 class="font-weight-semi-bold mb-4">Màu sắc</h5>
					<form id="color-filer-form">
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="all" checked id="color-all">
							<label class="custom-control-label" for="price-all">Tất cả</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="Black" id="color-1">
							<label class="custom-control-label" for="color-1">Màu đen</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="White" id="color-2">
							<label class="custom-control-label" for="color-2">Màu trắng</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="Red" id="color-3">
							<label class="custom-control-label" for="color-3">Màu đỏ</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
							<input type="checkbox" class="custom-control-input" val="Blue" id="color-4">
							<label class="custom-control-label" for="color-4">Màu xanh</label>
						</div>
						<div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
							<input type="checkbox" class="custom-control-input" val="Green" id="color-5">
							<label class="custom-control-label" for="color-5">Màu xanh lá cây</label>
						</div>
					</form>
				</div>
				<!--End lọc theo màu-->

				<button id="btnFilter" type="submit" class="fa fa-search">Áp dụng</button>

			</aside> 
			<!--Start sản phẩm-->
			<main class="col-md-10">
				@foreach(var item in Model.TbProducts)
				{
				<article class="card card-product-list">
					<div class="row no-gutters">
						<aside class="col-md-3">
							<a href="#" class="img-wrap">
								<span class="badge badge-danger"> NEW </span>
								<img src="@item.Thumbnail">
							</a>
						</aside> 
						<div class="col-md-6">
							<div class="info-main">
								<a href="#" class="h5 title"> @item.Name</a>
								<div class="rating-wrap mb-2">
									<ul class="rating-stars">
										<li style="width:100%" class="stars-active">
											<i class="fa fa-star"></i> <i class="fa fa-star"></i>
											<i class="fa fa-star"></i> <i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
										</li>
										<li>
											<i class="fa fa-star"></i> <i class="fa fa-star"></i>
											<i class="fa fa-star"></i> <i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
										</li>
									</ul>
									<div class="label-rating">4/5</div>
								</div> 

								<p class="mb-3">
									<span class="tag"> 5 Years </span>
									<span class="tag"> 80 Đánh giá </span>

								</p>

								<p>
									@item.Description
								</p>

							</div> 
						</div> 
						<aside class="col-sm-3">
							<div class="info-aside">
								<div class="price-wrap">
										<span class="h5 price">@(item.Price * (1 - item.PriceDiscount))</span>
									<small class="text-muted">đ</small>
										<del class="price-old">@item.Price</del>
									<small class="text-muted">đ</small>
								</div> 
								<small class="text-success">Free shipping</small>

								<p class="mt-3">
									<a href="@Url.Action("AddToCart","Cart",new{productId = @item.ProductId})" class="btn btn-outline-primary mb-3"> <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng </a>
									<a href="/Cart" class="btn btn-light"><i class="fa fa-heart"></i> Xem giỏ hàng </a>
								</p>




							</div> 
						</aside>
					</div>
				</article> 
				}
			<!--End sản phẩm-->
			



				<!--Start Phân trang-->
				<nav class="mb-4" aria-label="Page navigation sample">
					<ul class="pagination">
						<li class="page-item disabled"><a class="page-link" href="#">Trước đó</a></li>
						@for(int i =1; i <= Model.PagingInfo.TotalPages; i++)
                         {
							<li class="page-item "><a class="page-link" href="/Product/?ProductPage=@i">@i</a></li>
						 }
						<li class="page-item"><a class="page-link" href="#">Tiếp theo</a></li>
					</ul>
				</nav>
				<!--End Phân trang-->






			</main> 

		</div>

	</div> 
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
